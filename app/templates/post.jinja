{% extends "base.jinja" %}

{% block content %}
<form action="" method="post">
    <h3>Share With Us</h3>

    {{ form.hidden_tag()}}

    <p>
        {{ form.body.label }}<br>
        {{ form.body(size=32) }}
        {% for error in form.body.errors %}
        <span class="err-msg"> {{ error }} </span>
        {% endfor %}
    </p>

    <p>
        {{ form.submit() }}

    </p>
</form>
{% endblock %}