{% extends "base.jinja" %}

{% block content %}

<body background-color="black">
    <center>
        <div class="container text-center">
            <div class="row justify-content-md-center">
                <div class="col col-lg-2">

                </div>
                <div class="col-md-auto">
                    <br>
                    <img src="{{url_for('static', filename='evilkitty001.jpeg')}}" align="middle" width="300px" />
                    <br>
                    <br>
                    <h5 style="color: rgb(226, 214, 161)">Register for an <font style="color: white">Animal Wars</font>
                        <em>
                            <font style="color: red">2086</font>
                        </em> Account:</h5>
                    <br>
                    <br>
                    <form action="" method="post">
                        <font style="color: rgb(226, 214, 161)">

                            {{ form.hidden_tag()}}

                            <p>
                                {{ form.username.label }}<br>
                                {{ form.username(size=32) }}
                            </p>
                            <p>
                                {{ form.first_name.label }}<br>
                                {{ form.first_name(size=32) }}
                            </p>
                            <p>
                                {{ form.last_name.label }}<br>
                                {{ form.last_name(size=32) }}
                            </p>
                            <p>
                                {{ form.email.label }}<br>
                                {{ form.email(size=32) }}
                                {% for error in form.email.errors %}
                                <span class="err-msg"> {{ error }} </span>
                                {% endfor %}
                            </p>

                            <p>
                                {{ form.password.label }}<br>
                                {{ form.password(size=32) }}
                                {% for error in form.password.errors %}
                                <span class="err-msg"> {{ error }} </span>
                                {% endfor %}
                            </p>
                        </font>
                        <p>
                            {{ form.submit() }}

                        </p>
                    </form>
                </div>
                <div class="col col-lg-2">

                </div>
            </div>
            <div class="row">
                <div class="col">

                </div>
                <div class="col-md-auto">

                </div>
                <div class="col col-lg-2">

                </div>
            </div>
        </div>
    </center>
</body>


{% endblock %}