{% extends "base.jinja" %}

{% block content %}

<body background-color="black">
    <div class="container text-center">
        <div class="row justify-content-md-center">
            <div class="col col-lg-2">

            </div>
            <div class="col-md-auto">
                <br>
                <img src="{{url_for('static', filename='evilkitty001.jpeg')}}" align="middle" width="300px" />
                <br>
                <br>
                <h5 style="color: rgb(226, 214, 161)">Register for an <font style="color: white">Animal Wars</font><em>
                        <font style="color: red">2086</font>
                    </em> Account:</h5>
                <br>
                <br>
                <form class="row g-3">
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">
                            <font style="color: rgb(226, 214, 161)">Email</font>
                        </label>
                        <input type="email" class="form-control" id="inputEmail4">
                    </div>
                    <div class="col-md-6">
                        <label for="inputPassword4" class="form-label">
                            <font style="color: rgb(226, 214, 161)">Choose a Password</font>
                        </label>
                        <input type="password" class="form-control" id="inputPassword4">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">
                            <font style="color: rgb(226, 214, 161)">Address</font>
                        </label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">
                            <font style="color: rgb(226, 214, 161)">Address 2</font>
                        </label>
                        <input type="text" class="form-control" id="inputAddress2"
                            placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">
                            <font style="color: rgb(226, 214, 161)">City</font>
                        </label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">
                            <font style="color: rgb(226, 214, 161)">State</font>
                        </label>
                        <select id="inputState" class="form-select">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">
                            <font style="color: rgb(226, 214, 161)">Zip</font>
                        </label>
                        <input type="text" class="form-control" id="inputZip">
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                                <font style="color: rgb(226, 214, 161)">Receive Email Notifications</font>
                            </label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Create Account</button>
                    </div>
                </form>
            </div>
            <div class="col col-lg-2">

            </div>
        </div>
        <div class="row">
            <div class="col">

            </div>
            <div class="col-md-auto">

            </div>
            <div class="col col-lg-2">

            </div>
        </div>
    </div>

</body>


{% endblock %}